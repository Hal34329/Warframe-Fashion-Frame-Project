{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Attachments Schema",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "oneOf": [
            {
                "$ref": "#/$defs/commentObject"
            },
            {
                "$ref": "#/$defs/attachmentObject"
            }
        ]
    },
    "$defs": {
        "hexColor": {
            "type": "string",
            "pattern": "^#[a-fA-F0-9]{6}$"
        },
        "commentObject": {
            "type": "object",
            "properties": {
                "_comment": { "type": "string" }
            },
            "required": [ "_comment" ],
            "additionalProperties": false
        },
        "attachmentObject": {
            "type": "object",
            "properties": {
                "id": { "type": "integer", "minimum": 1 },
                "name": { "type": "string" },
                "slot": { "type": "string" }
            },
            "required": [
                "id",
                "name",
                "slot"
            ],
            "additionalProperties": false
        }
    }
}