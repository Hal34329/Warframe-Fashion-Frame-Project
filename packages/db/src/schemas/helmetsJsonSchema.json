{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Helmets Schema",
    "type": "array",
    "items": {
        "oneOf": [
            { "$ref": "#/$defs/commentObject" },
            { "$ref": "#/$defs/attachmentObject" }
        ]
    }, 
    "$defs": {
        "commentObject": {
            "type": "object",
            "properties": {
                "_comment": { "type": "string" }
            },
            "required": [ "_comment" ],
            "additionalProperties": false
        },
        "attachmentObject":{
        "type": "object",
        "properties": {
            "id": { "type": "integer", "minimum": 1 },
            "name": { "type": "string" },
            "warframeId": { "type": "integer" }
        },
        "required": [ "id", "name", "warframeId" ],
        "additionalProperties": false
        }
    }
}