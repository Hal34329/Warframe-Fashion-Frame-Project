{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Warframes Schema",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "oneOf": [
            { "$ref": "#/$defs/commentObject" },
            { "$ref": "#/$defs/warframesObject" }
        ]
    },
    "$defs": {
        "commentObject": {
            "type": "object",
            "properties": {
                "_comment": {
                    "type": "string"
                }
            },
            "required": [
                "_comment"
            ],
            "additionalProperties": false
        },
        "warframesObject": {
            "type": "object",
            "properties": {
                "id": { "type": "integer", "minimum": 1 },
                "name": { "type": "string" },
                "isPrime": { "type": "boolean" },
                "isGemini": { "type": "boolean" }
            },
            "required": [ "id", "name", "isPrime", "isGemini" ],
            "additionalProperties": false
        }
    }
}